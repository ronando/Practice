<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hkjc.jessepractice.UI.PracticeFragmentActivity">

    <TextView
        android:id="@+id/v_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="I am title !!!" />


    <include
        android:id="@+id/v_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        layout="@layout/bottom_bar">

    </include>


    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/v_title_bar"
        android:layout_above="@+id/v_bottom_bar"
        android:background="#330000ff">
    </FrameLayout>


</RelativeLayout>
